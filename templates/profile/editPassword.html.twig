{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}
{% block body %}
    <div class="d-flex justify-content-center align-items-center">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center" role="alert">{{ message }}</div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center align-items-center">
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger text-center" role="alert">{{ message }}</div>
        {% endfor %}
    </div>

    <h1 style="margin-bottom: 150px">Modification du mot de passe de {{ app.user.firstName }} {{ app.user.name }}</h1>

    <div class="container" style="text-align: center">

        <form method="post">
            <div class="mb-3">
                <label
                        for="password"
                        class="form-label">
                    Mot de passe
                </label>
                <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        placeholder="Nouveau mot de passe"
                >
            </div>
            <div class="mb-3">
                <label
                        for="password2"
                        class="form-label">
                   Confirmer le mot de passe
                </label>
                <input
                        type="password"
                        class="form-control"
                        id="password2"
                        name="password2"
                        placeholder="Confirmer votre mot de passe"
                >
            </div>
            <div class="btn-reservation-container ">
                <button type="submit" class="btn-reservation btn-form">Enregistrer</button>
            </div>
        </form>
    </div>
{% endblock %}
