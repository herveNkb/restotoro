{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {# We display the error flash message, if has a problem #}
    <div class="d-flex justify-content-center align-items-center">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger text-center" role="alert">{{ flash_error }}</div>
        {% endfor %}
    </div>

    <main class="container-form">
        <h1 class="title-form">Réinitialisez votre mot de passe</h1>
        <div class="form container-form-reset-password">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, {
                label: 'E-mail',
                attr: {
                    placeholder: 'E-mail'
                },
                row_attr: {
                    class: 'form-floating'
                }
            }) }}
            <div class="explicative-text-reset-password">
                <p>
                    Entrez votre adresse e-mail et nous vous enverrons un lien pour
                    réinitialiser votre mot de passe.
                </p>
            </div>
            <div class="container-btn-form">
                <button class="btn-form btn-form-position btn-login">Envoyer</button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </main>
{% endblock %}
