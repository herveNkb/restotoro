{% extends 'base.html.twig' %}

{% block title %}Notre carte{% endblock %}

{% block body %}

    <main class="menu-container">
        <h1 class=" menu-title">Notre carte</h1>
        <section class="list-menu-container">
            {# this loop is used to group menus by category  #}
            {% for category, menus in groupedMenus %}
                <h2 class="menu-category-subtitle">{{ category }}</h2>
                <ul class="menu-list">
                    {# this loop is used to display the menus according to the category associated with them #}
                    {% for menu in menus %}
                        <li class="menu-text">
                            <p><strong>{{ menu.dishTitle }}</strong> - {{ menu.dishPrice }} â‚¬</p>
                            <p><em>{{ menu.dishdescription }}</em></p>
                        </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </section>
        {# booking button template #}
        {% include "_partials/_booking-btn.html.twig" %}

        {# openings template for schedule #}
        {# The "raw" filter prevents HTML escaping of the timetable view #}
        {{ openingsView|raw }}
    </main>

{% endblock %}
